    <style>
        .help-hero {
            background: linear-gradient(135deg, #fff5f5, #f8f9fa);
            padding: 4rem 2rem;
            text-align: center;
        }

        .help-title {
            font-size: 3.5rem;
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease;
        }
        
        .help-title:hover {
            transform: translateY(-10px);
        }

        .help-subtitle {
            font-size: 1.5rem;
            color: var(--text-color);
            max-width: 800px;
            margin: 0 auto 3rem;
        }

        .help-options {
            display: flex;
            justify-content: center;
            gap: 3rem;  /* Slightly increased gap */
            max-width: 1400px;  /* Increased to accommodate larger cards */
            margin: 0 auto;
            padding: 2rem;
        }

        .help-card {
            flex: 1;
            max-width: 600px;  /* Increased from 400px */
            background: white;
            border-radius: 16px;
            padding: 3rem;  /* Increased from 2rem */
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .help-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

        .card-icon {
            max-width: 250px;  /* Increased from 200px */
            max-height: 250px;  /* Increased from 200px */
            width: auto;
            height: auto;
            margin: 0 auto 2rem;  /* Slightly increased bottom margin */
            display: block;
            object-fit: contain;
            border-radius: 20px;  /* Added rounded corners */
        }

        .card-title {
            font-size: 2rem;  /* Slightly increased from 1.8rem */
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .card-description {
            color: var(--text-color);
            margin-bottom: 1.5rem;
            line-height: 1.6;
            font-size: 1.1rem;  /* Slightly increased */
        }

        .card-link {
            display: inline-block;
            padding: 0.8rem 1.5rem;
            background-color: var(--primary-color);
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .card-link:hover {
            background-color: var(--secondary-color);
        }

        @media (max-width: 768px) {
            .help-options {
                flex-direction: column;
                align-items: center;
            }

            .help-card {
                width: 100%;
            }

            .help-title {
                font-size: 2.5rem;
            }

            .help-subtitle {
                font-size: 1.2rem;
                padding: 0 1rem;
            }
        }
    </style>
</head>
